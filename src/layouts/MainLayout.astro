---
import MainHead from "@layouts/MainHead.astro";
import Footer from "@components/Footer.astro";
import "@styles/global.css";
import Nav from "@components/Nav.astro";

const {
  title = "My Astro Blog",
  description = "My amazing Astro Blog!",
  image,
  frontmatter,
  robots,
} = Astro.props;
---

<html lang="en">
  <MainHead {title} {description} {image} {frontmatter} {robots} />
  <body>
    <Nav />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
