---
import MainHead from "@layouts/MainHead.astro";
import Footer from "@components/Footer.astro";
import "@styles/global.css";
import Nav from "@components/Nav.astro";

type Props = {
  title?: string;
  description?: string;
};

const { title = "My Astro Blog", description = "My amazing Astro Blog!" } =
  Astro.props as Props;
---

<html lang="en">
  <MainHead {title} {description} />
  <body>
    <Nav />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
