---
import PostCard from "@components/PostCard.astro";
import { formatBlogPosts, slugify } from "@js/utils";
import MainLayout from "@layouts/MainLayout.astro";
import type { Frontmatter } from "src/types/types";
import type { MarkdownInstance } from "astro";

export async function getStaticPaths() {
  const allPost = await Astro.glob<Frontmatter>("../blog/*.md");
  const formattedPosts = formatBlogPosts(allPost);
  const allPosts = [
    ...new Set(formattedPosts.map((post) => post.frontmatter.category).flat()),
  ];

  return allPosts.map((category) => {
    const categoryPosts = formattedPosts.filter(
      (post) => post.frontmatter.category === category
    );
    return {
      params: { category: slugify(category) },
      props: {
        categoryName: category,
        posts: categoryPosts,
      },
    };
  });
}

const { categoryName, posts } = Astro.props as {
  categoryName: string;
  posts: MarkdownInstance<Frontmatter>[];
};
---

<MainLayout title={categoryName}>
  <section class="container" aria-label={`Posts about ${categoryName}`}>
    <h1 class="h1">Post about <span>{categoryName}</span></h1>
    <div class="post-container">
      {
        posts.map((post) => (
          <PostCard
            frontmatter={post.frontmatter}
            url={post.url}
            tagType="h2"
          />
        ))
      }
    </div>
  </section>
</MainLayout>
