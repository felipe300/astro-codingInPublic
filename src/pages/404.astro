---
import Link from "@components/Link.astro";
import MainLayout from "@layouts/MainLayout.astro";

const title = "Page Not found";
---

<MainLayout title={title}>
  <div
    class="container"
    style={{
      display: "grid",
      placeItems: "center",
      textAlign: "center",
      gap: "var(--space-sm)",
    }}
  >
    <div>
      <h1 class="h1">Welp, This is awkward!</h1>
      <p>We seem to have misplace something...</p>
    </div>
    <Link
      href="/"
      style="secondary"
      text="Go Home"
      icon={{
        name: "tabler:home",
        side: "right",
      }}
    />
  </div>
</MainLayout>
